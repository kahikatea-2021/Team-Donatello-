<div class = 'h-20 bg-gray-700'>
 <h1 class='text-3xl text-yellow-600 p-5 ml-8 max-w-xl'>{{message.topic}}</h1>
</div>

<div id = "chat" class='h-96 overscroll-auto overflow-auto bg-gray-600 flex flex-col-reverse'>
  
  {{#if message}}
  {{#each message.messages}}
  <container class='m-10 max-w-xl justify-around'>
    <p class='rounded-sm text-sm bg-yellow-300 text-black-600 ml-10 max-w-xs'>{{name}} {{date}}</p>
    <p class='rounded-sm text-3xl bg-yellow-300 text-yellow-600 ml-10 max-w-xl'>{{message}}</p>
  </container>
  {{/each}}
  {{/if}}

